{% extends 'AppBundle::base.html.twig' %}

{% block pageTitle %}
    Post #{{ post.id }} | {{ parent() }}
{% endblock %}

{% block pageContainer %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h1>Post #{{ register.id }}</h1>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <div class="row">
                                    <div class="col-xs-3"><h4>Name: </h4></div>
                                    <div class="col-xs-9">
                                        <input type="text" class="form-control" name="name" id="name" value="{{ post.name }}">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-xs-12">
                                    <textarea class="form-control" rows="6" name="description" id="description" placeholder="{{ post.description }}"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        Post details
                        <a class="btn btn-info btn-sm pull-right panel-btn" href="{{ path('show_news') }}">Back to profile</a>
                        <a class="btn btn-warning btn-sm pull-right panel-btn" href="{{ path('news_update', {'id': post.id}) }}">Edit post</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}